{
  "name": "sevis-global-testing",
  "version": "1.0.0",
  "description": "Testing dependencies for Sevis Global Education",
  "scripts": {
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress run --headed",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:e2e:edge": "cypress run --browser edge",
    "test:open": "cypress open",
    "test:performance": "lighthouse https://sevisedu.com --output html --output-path ./reports/lighthouse.html",
    "test:accessibility": "pa11y https://sevisedu.com --reporter html --output ./reports/a11y.html",
    "test:links": "broken-link-checker https://sevisedu.com --recursive --ordered",
    "test:security": "npm audit --audit-level=moderate",
    "test:all": "npm run test:e2e && npm run test:performance && npm run test:accessibility",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "report:generate": "marge cypress/reports/merged-report.json -o cypress/reports/html",
    "report:open": "open cypress/reports/html/index.html"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "cypress-audit": "^1.1.0",
    "cypress-axe": "^1.5.0",
    "@cypress/code-coverage": "^3.12.0",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "broken-link-checker": "^0.7.8",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/react": "^14.1.2",
    "axe-core": "^4.8.3"
  },
  "dependencies": {},
  "cypress": {
    "baseUrl": "https://sevisedu.com",
    "chromeWebSecurity": false,
    "videoCompression": 32,
    "videoUploadOnPasses": false
  }
}

